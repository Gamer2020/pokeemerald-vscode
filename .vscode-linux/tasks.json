{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install agbcc",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "cd .. && rm -rf agbcc && git clone https://github.com/pret/agbcc && cd agbcc && ./build.sh && ./install.sh ../${workspaceFolderBasename}",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Update pokeemerald-vscode",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "cd .. && rm -rf pokeemerald-vscode && git clone https://github.com/Gamer2020/pokeemerald-vscode && cp pokeemerald-vscode/.vscode/ ${workspaceFolderBasename}/ -r",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "make",
            "args": [
                "-j32",
                "DINFO=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "make",
            "args": [
                "-j32"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Tools",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "make",
            "args": [
                "-j32",
                "tools"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "make",
            "args": [
                "-j32",
                "clean"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "mGBA_run",
            "type": "shell",
            "windows": {
                "command": "/mnt/c/Tools/Program Files/mGBA.exe",
            },
            "linux": {
                "command": "mgba-qt",
            },
            "args": [
                "pokeemerald.gba"
            ],
            "group": "test",
            "isBackground": true
        },
        {
            "label": "mGBA_debug",
            "type": "shell",
            "windows": {
                "command": "/mnt/c/Tools/Program Files/mGBA.exe",
            },
            "linux": {
                "command": "mgba-qt",
            },
            "args": [
                "-g",
                "pokeemerald.gba"
            ],
            "group": "test",
            "isBackground": true
        },
        {
            "label": "Add Remotes",
            "type": "shell",
            "promptOnClose": true,
            "windows": {
                "options": {
                    "shell": {
                        "executable": "bash.exe",
                        "args": [
                            "-lc"
                        ]
                    }
                }
            },
            "command": "git remote add -t battle_engine_v2 battle_engine_v2 https://github.com/DizzyEggg/pokeemerald.git && git remote add -t pokemon_expansion pokemon_expansion https://github.com/DizzyEggg/pokeemerald.git && git remote add -t item_expansion item_expansion https://github.com/DizzyEggg/pokeemerald.git && git remote add -t master pokeemerald-base https://github.com/Gamer2020/pokeemerald-base.git",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}